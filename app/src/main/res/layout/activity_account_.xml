<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backlogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/login_background"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/emailTV"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="112dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="My Email"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.239"
            app:layout_constraintStart_toEndOf="@+id/accountIB"
            app:layout_constraintTop_toBottomOf="@+id/nameTV" />

        <TextView
            android:id="@+id/univerityTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="My University"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/my3summariesRV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accountIB"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/nameTV"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="112dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:text="My Name"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.225"
            app:layout_constraintStart_toEndOf="@+id/accountIB"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/accountIB"
            android:layout_width="152dp"
            android:layout_height="139dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.064"
            app:srcCompat="@android:drawable/sym_def_app_icon" />



        <android.support.v7.widget.RecyclerView
            android:id="@+id/my3summariesRV"
            android:layout_width="368dp"
            android:layout_height="272dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/courseTV"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="76dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="My Course"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/my3summariesRV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/accountIB"
            app:layout_constraintTop_toBottomOf="@+id/emailTV"
            app:layout_constraintVertical_bias="0.115" />

    </android.support.constraint.ConstraintLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nv_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
